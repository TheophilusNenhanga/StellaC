---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import Wrapper from "../components/Wrapper.astro";

type Props = {
	title: string;
};
const props = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Stella Lang | {props.title}</title>
	</head>

	<body
		class="font-sans grid grid-rows-[auto_1fr_auto] h-screen bg-neutral-100 text-gray-950 dark:bg-slate-900 dark:text-gray-50"
	>
		<header>
			<Navbar />
		</header>

		<main class="pt-20">
			<Wrapper>
				<slot />
			</Wrapper>
		</main>

		<footer class="bg-neutral-200 dark:bg-slate-950 text-gray-950 dark:text-gray-50">
				<Footer />
		</footer>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
