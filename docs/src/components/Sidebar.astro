---
// Define the sidebar structure for navigation
const sidebarItems = [
  {
    section: 'Getting Started',
    items: [
      { title: 'Introduction', href: '/getting-started' },
      { title: 'Installation', href: '/getting-started/installation' },
    ]
  },
  {
    section: 'Language Guide',
    items: [
      { title: 'Variables & Data Types', href: '/docs/variables-and-data-types' },
      { title: 'Control Flow', href: '/docs/control-flow' },
      { title: 'Functions', href: '/docs/functions' },
      { title: 'Data Structures', href: '/docs/data-structures' },
      { title: 'Classes & Objects', href: '/docs/classes-and-objects' },
    ]
  },
  {
    section: 'Reference',
    items: [
      { title: 'Built-in Functions', href: '/docs/built-in-functions' },
    ]
  }
];

const currentPath = Astro.url.pathname;
---

<aside class="w-64 h-screen overflow-y-auto fixed left-0 top-16 px-4 py-8 bg-neutral-200 dark:bg-slate-800 border-r border-neutral-300 dark:border-slate-700">
  <nav>
    {sidebarItems.map(section => (
      <div class="mb-6">
        <h3 class="text-lg font-bold mb-2 text-gray-800 dark:text-gray-200">{section.section}</h3>
        <ul class="space-y-2">
          {section.items.map(item => (
            <li>
              <a 
                href={item.href} 
                class={`block py-1 px-2 rounded transition-colors ${
                  currentPath === item.href 
                    ? 'bg-blue-600 text-white' 
                    : 'hover:bg-neutral-300 dark:hover:bg-slate-700'
                }`}
              >
                {item.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </nav>
</aside> 